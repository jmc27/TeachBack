    <!--                              COURSE DASHBOARD                -->
    <div class="container pagepad page-wrapper">
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h4 class="panel-title" id="courseTitle"><i class="glyphicon glyphicon-book"></i> 
                <%= @course.title %></h4>
            </div>
            <div class="panel-body courseDetails">
              <ul class="bs-docs-footer-links muted">
                <li id="courseLocation"><i class="glyphicon glyphicon-map-marker"></i> <%= @course.location %></li>
                <li>&middot;</li>
                <li id="courseTime"><i class="glyphicon glyphicon-time"></i>
                  <%= @course.lecture_days %> <%= @course.lecture_start_time %> - <%= @course.lecture_end_time %>
                </li>
                <li>&middot;</li>
                <li id="courseInstructor"><i class="glyphicon glyphicon-user"></i> Instructor: <%= @course.instructor %></li>
              </ul>
              
            </div>
          </div>
        </div>
      </div>
    </div>


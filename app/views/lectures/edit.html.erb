<!--                              COURSE DASHBOARD                -->
<div class="container pagepad page-wrapper">
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4 class="panel-title"><i class="glyphicon glyphicon-book"></i> <%=@lecture.title%></h4>
        </div>
        <div class="panel-body courseDetails">
          <p><i class="fa fa-desktop fa-fw"></i><%=@lecture.info%></p>
          <p><i class="fa fa-calendar fa-fw"></i> <%=@lecture.date%></p>
        </div>
      </div>
    </div>
  </div>
</div>

<!--                               CONTENT                -->
<div class="container-fluid">
  <%= render "shared/flash" %>
  <% if @lecture.errors.any? %>
    <%= render partial: "shared/create_errors", locals: {object: @lecture, name:"lecture"} %>
  <% end %>
  <div class="row">
    <div class="col-sm-7">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4 class="panel-title"><i class="glyphicon glyphicon-edit"></i> Edit Lecture
          <%= link_to 'Delete Lecture', [@course, @lecture],
               method: :delete,
               data: { confirm: 'Are you sure?' }, class:"pull-right btn btn-danger" %>
          </h4>
        </div>
        <div class="panel-body">
          <%= form_for([@course, @lecture]) do |f| %>
          <div class="input-group">
            <span class="input-group-addon">Title</span>
            <%= f.text_field :title,class:"form-control" %>
          </div>
          <div class="input-group">
            <span class="input-group-addon">Date</span>
            <%= f.date_field :date,class:"form-control" %>
          </div>
          <div class="input-group">
            <span class="input-group-addon">Info/Summary</span>
            <%= f.text_area :info, placeholder:"Optional",class:"form-control" %>
          </div>
          
          <br>
          <div class="text-center">
            <a class="btn btn-default" href="<%= course_lecture_path(@course,@lecture) %>"><i class="fa fa-reply"></i> Cancel</a>
            <button role="button" type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-send"></i> Update</button>
          </div>
          <% end %>    
        </div>
      </div>
      
    </div>
    <div class="col-sm-5 scrollable">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4 class="panel-title"><i class="glyphicon glyphicon-bell"></i> Course Notifications</h4>
        </div>
        <div id="userNotifications" class="panel-body">
          <div class="alert alert-warning">
            <strong>Warning!</strong> Better check yourself, you're not looking too good.
          </div>
          <div class="alert alert-success">
            <strong>Warning!</strong> Better check yourself, you're not looking too good.
          </div>
          <div class="alert alert-info">
            <strong>Warning!</strong> Better check yourself, you're not looking too good.
          </div>
          <div class="alert alert-danger">
            <strong>Warning!</strong> Better check yourself, you're not looking too good.
          </div>
          <div class="alert alert-warning">
            <strong>Warning!</strong> Better check yourself, you're not looking too good.
          </div>
         
          
        </div>
      </div>
    </div>
  </div>
  
  <%= render "shared/footer" %>
</div>

